# Variables de entorno para optimización de memoria en Railway

# Configuración JVM optimizada para Railway (1GB RAM limit)
JAVA_OPTS=-Xmx512m -Xms256m -XX:MaxMetaspaceSize=128m -XX:+UseG1GC -XX:+UseStringDeduplication -XX:MaxGCPauseMillis=200 -XX:+DisableExplicitGC -Djava.security.egd=file:/dev/./urandom

# Configuración de base de datos
DATABASE_URL=jdbc:mysql://localhost:3306/dejatuhuella
DATABASE_USERNAME=root
DATABASE_PASSWORD=password

# Configuración OAuth2 Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Configuración Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Configuración Stripe
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Puerto del servidor (Railway lo asigna automáticamente)
PORT=8080

# Perfil de Spring activo
SPRING_PROFILES_ACTIVE=prod